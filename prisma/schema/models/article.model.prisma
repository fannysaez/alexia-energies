// Model representing a blog article
model Article {
    id               String         @id @default(cuid()) // Identifiant unique / Unique identifier
    titre            String // Titre de l'article / Article title
    slug             String         @unique // Slug unique pour l'URL / Unique slug for URL
    auteur           String // Nom de l'auteur / Author name
    description      String? // Description courte de l'article / Short article description
    dateCreation     DateTime       @default(now()) // Date de cr√©ation / Creation date
    dateModification DateTime       @updatedAt // Date de modification / Last modification date
    datePublication  DateTime? // Date de publication (optionnelle) / Publication date (optional)
    statut           String         @default("brouillon") // Statut de l'article / Article status
    contenu          String         @db.Text // Contenu principal / Main content
    image            String? // Image associ√©e (optionnelle) / Associated image (optional)
    imageCouverture  String? // Image de couverture (optionnelle) / Cover image (optional)
    categoryId       String? // R√©f√©rence √† la cat√©gorie (optionnelle)
    views   Int    @default(0)
    // Relations
    contentBlocks    ContentBlock[] // Blocs de contenu li√©s / Related content blocks
    paragraphs       Paragraph[] // Paragraphes li√©s / Related paragraphs
    category         Category?      @relation(fields: [categoryId], references: [id]) // Relation avec la cat√©gorie (optionnelle)
    favorites        Favorite[]     // üëà relation ajout√©e

    @@map("articles") // Nom de la table en base de donn√©es / Table name in database
}
